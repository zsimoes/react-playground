{
	"name": "react-playground",
	"version": "1.0.0",
	"description": "React Playground is a project boilerplate I created for small React projects and practicing TDD with Jest and React Testing Library. It's also well-suited for exploring React features.",
	"main": "index.js",
	"scripts": {
		"start": "webpack-dev-server --mode development",
		"build": "webpack --mode production",
		"prettier": "prettier \"**/*.+(js|jsx|json|css|scss|ts|tsx|md|mdx|graphql)\"",
		"format": "npm run prettier -- --write",
		"lint": "eslint . --ext .js,.jsx",
		"flow": "flow",
		"test": "jest",
		"test:watch": "jest --watch",
		"validate": "npm-run-all --parallel lint format flow"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && npm run validate"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix"
		],
		"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
			"prettier --write",
			"jest --findRelatedTests"
		]
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:georgebullock/react-playground.git"
	},
	"keywords": [
		"html",
		"css",
		"javascript",
		"webpack",
		"flow",
		"jest"
	],
	"author": "George Bullock",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/georgebullock/react-playground/issues"
	},
	"homepage": "https://github.com/georgebullock/react-playground#readme",
	"devDependencies": {
		"@babel/core": "^7.8.6",
		"@babel/plugin-proposal-class-properties": "^7.8.3",
		"@babel/preset-env": "^7.8.6",
		"@babel/preset-flow": "^7.8.3",
		"@babel/preset-react": "^7.8.3",
		"@testing-library/jest-dom": "^5.1.1",
		"@testing-library/react": "^10.0.1",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.0.6",
		"clean-webpack-plugin": "^3.0.0",
		"css-loader": "^3.4.2",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-flowtype": "^4.6.0",
		"eslint-plugin-jest-dom": "^2.0.1",
		"eslint-plugin-react": "^7.19.0",
		"flow-bin": "^0.119.1",
		"html-webpack-plugin": "^3.2.0",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"lint-staged": "^10.0.8",
		"mini-css-extract-plugin": "^0.9.0",
		"node-sass": "^4.13.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"sass-loader": "^8.0.2",
		"style-loader": "^1.1.3",
		"webpack": "^4.42.0",
		"webpack-cli": "^3.3.11",
		"webpack-dev-server": "^3.10.3"
	},
	"dependencies": {
		"react": "^16.13.0",
		"react-dom": "^16.13.0",
		"semantic-ui-react": "^0.88.2"
	}
}
