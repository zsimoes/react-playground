{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"eslint-config-prettier",
		"plugin:flowtype/recommended",
		"plugin:jest-dom/recommended"
	],
	"plugins": ["flowtype", "jest-dom"],
	"rules": {
		"no-console": "off",
		"react/react-in-jsx-scope": "off"
	},
	"settings": {
		"react": {
			"pragma": "react",
			"version": "detect",
			"flowVersion": "0.119"
		}
	},
	"env": {
		"browser": true,
		"node": true,
		"jest": true
	}
}
